<% include commons/partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <% for (var i=0; i < project.photos.length; i++) { %>
      <div class="thumbnail project-thumbnail">
        <img src="/uploads/<%= project.photos[0] %>" class="img-responsive">
      </div>
      <% } %>
    </div>
    <div class="col-md-4 project-description">
      <h3><%= project.title %></h3>
      <p><%= project.description %></p>
      <span class="label label-success"><%= project.step %></span>
      <div class="indicators">
        <p>Current ressources :</p>
        <!--p><%=project.resources.length%></p>
        <p><%= project.creator%></p>
        <p><%= user._id%></p-->

        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow= "<%=project.resources.length %>" aria-valuemin="0" aria-valuemax="100" style="min-width: <%=participation%>;">
              <%=participation%>
          </div>
        </div>

        <!-- <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow= "<%=project.resources.length %>" aria-valuemin="0" aria-valuemax="100" style="min-width: <%=(project.resources.length / project.contributorMax * 100)%>%;">
              <%=(project.resources.length / project.contributorMax * 100)%>%
          </div>
        </div> -->

      </div>
      <div class="buttons">
        <% if (project.creator.toString() !== user._id.toString()) { %>
          <button type="button" class="btn btn-primary btn-lg btn-block button-join" data-project="<%= project._id %>">
                <% if (project.resources.length && _.find(project.resources, {contributor: user._id})) {%>
                      LEAVE
                    <%} else {%>
                      JOIN
                    <%}%>
            </button>
                <%} else { %>
        <a href="/project/<%=project._id %>/edit" class="btn btn-primary btn-lg btn-block">EDIT</a>
                <% } %>
        <br>
          <div class="row">
            <div class="col-sm-6">
              <button type="button" class="btn btn-default btn-lg btn-block">SHARE</button>
            </div>
            <div class="col-sm-6">
              <button type="button" class="btn btn-default btn-lg btn-block">FAVORITE</button>
            </div>
          </div>
      </div>

    </div>
  </div>
</div>

<nav class="navbar navbar-default">
  <div class="container">
    <!-- Collect the nav links, forms, and other content for toggling -->
