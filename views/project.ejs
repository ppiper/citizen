<% include commons/partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <% for (var i=0; i < project.photos.length; i++) { %>
      <div class="thumbnail project-thumbnail">
        <img src="/uploads/<%= project.photos[0] %>" class="img-responsive">
      </div>
      <% } %>
    </div>
    <div class="col-md-4 project-description">
      <h3><%= project.title %></h3>
      <p><%= project.description %></p>
      <span class="label label-success"><%= project.step %></span>
      <div class="indicators">
        <p>Current ressources :</p>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: 2%;">
            2%
          </div>
        </div>
      </div>
      <div class="buttons">
        <button type="button" class="btn btn-primary btn-lg btn-block join-button" data-project="<%= project._id %>">JOIN</button>
        <br>
          <div class="row">
            <div class="col-sm-6">
              <button type="button" class="btn btn-default btn-lg btn-block">SHARE</button>
            </div>
            <div class="col-sm-6">
              <button type="button" class="btn btn-default btn-lg btn-block">FAVORITE</button>
            </div>
          </div>
      </div>

    </div>
  </div>
</div>

<nav class="navbar navbar-default">
  <div class="container">
    <!-- Collect the nav links, forms, and other content for toggling -->
